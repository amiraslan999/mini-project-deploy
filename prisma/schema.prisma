// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Float
  image       String
  inStock     Boolean  @default(false)
  description String
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
